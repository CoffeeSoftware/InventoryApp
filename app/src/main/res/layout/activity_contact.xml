<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="comcoffeesoftware.httpsgithub.inventarsoft.ContactActivity">

    <ImageView
        android:id="@+id/email"
        style="@style/StilPentruImagini"
        android:layout_width="192dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/touch_feedback"
        android:src="@drawable/ic_at_white_48dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/sms"
            style="@style/StilPentruImagini"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/touch_feedback"
            android:src="@drawable/ic_forum_white_48dp" />

        <ImageView
            android:id="@+id/telefon"
            style="@style/StilPentruImagini"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/touch_feedback"
            android:src="@drawable/ic_phone_in_talk_white_48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/adresa_facebook"
            style="@style/StilPentruImagini"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/touch_feedback"
            android:src="@drawable/ic_facebook_white_48dp" />

        <ImageView
            android:id="@+id/Donatii"
            style="@style/StilPentruImagini"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/touch_feedback"
            android:src="@drawable/ic_coin_white_48dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/whatsapp"
        style="@style/StilPentruImagini"
        android:layout_width="192dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/touch_feedback"
        android:src="@drawable/ic_whatsapp_white_48dp" />

</LinearLayout>
